<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo de la empresa -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_empresa" />


        <!-- Nombre de la Empresa -->
        <EditText
            android:id="@+id/editTextEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Empresa"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textColorHint="#757575"
            android:textSize="16sp"/>

        <!-- Descripción del Paquete -->
        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del Paquete"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textColorHint="#757575"
            android:textSize="16sp"/>

        <!-- Piso -->
        <EditText
            android:id="@+id/editTextPiso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Piso"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textColorHint="#757575"
            android:textSize="16sp"/>

        <!-- Fecha automática -->
        <TextView
            android:id="@+id/textViewFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_textview"/>

        <!-- Hora automática -->
        <TextView
            android:id="@+id/textViewHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora: "
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_textview"/>

        <!-- Botón para agregar paquete -->
        <Button
            android:id="@+id/buttonAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Paquete"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textSize="16sp"
            android:padding="12dp"/>

        <!-- Botón para ver paquetes -->
        <Button
            android:id="@+id/buttonVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Paquetes"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:textSize="16sp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
